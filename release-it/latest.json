{
    "git": {
      "tag": true,
      "tagAnnotation": "Release ${version}",
      "commit": true,
      "commitMessage": "Release v${version}",
      "push": true,
      "changelog": "npx auto-changelog --stdout --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "after:bump": "npx auto-changelog --template https://raw.githubusercontent.com/release-it/release-it/master/templates/keepachangelog.hbs"
    },
    "github": {
      "release": true
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
          "filename": "CHANGELOG.md",
          "strictLatest": false,
          "addUnreleased": true,
          "addVersionUrl": true
        }
    }
}