{
    "git": {
      "tag": true,
      "tagAnnotation": "Release ${version}",
      "commit": true,
      "commitMessage": "Release v${version}",
      "push": true,
      "changelog": "npx auto-changelog --stdout"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
          "filename": "CHANGELOG.md",
          "strictLatest": false,
          "addUnreleased": true,
          "addVersionUrl": true
        }
    }
}